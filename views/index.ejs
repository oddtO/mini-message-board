<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Mini Message Board</title>
        <link rel="stylesheet" href="reset.css">
        <link rel="stylesheet" href="styles.css">

        <meta property="og:title" content="Mini Message Board">
        <meta property="og:type" content="website">
        <meta property="og:description" content="Leave your message for others to see">

        <meta property="og:url" content="https://advisory-kristan-theodinproject-oddto-610b337d.koyeb.app/">
        <meta property="og:image" content="/page_preview.png">
        <meta property="og:image:type" content="image/png">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:image:alt" content="Message board">
    </head>
    <body>
        <main>
            <h1>Mini Message Board</h1>
            <div class="list-wrapper">
                <h2>Messages</h2>
                <ul>
                    <% messages.reverse().forEach(function(message){ %>
                    <%- include('message', {message: message}); %>
                    <% }); %>
                </ul>
            </div>
            <form
                action="/new"
                method="post"
                class="new-message"
            >
                <div class="inputs-wrapper">
                    <input
                        type="text"
                        name="username"
                        id="username"
                        placeholder="username"
                        required
                    >
                    <input
                        type="text"
                        name="message"
                        id="message"
                        placeholder="message"
                        required
                    >
                </div>

                <button type="submit">Send</button>
            </form>
        </main>
    </body>
</html>
